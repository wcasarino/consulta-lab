<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card header">
                <h3>Ingresar Paciente</h3>
            </div>
            <div class="card-body">
                <form action="/paciente/seek" method="POST">
                    <div class="form-group">
                        <div class="input-group mb-3">
                            {{!-- <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Options</label>
                            </div> --}}
                            <select class="custom-select" id="inputGroupSelect01" name="opcion">
                                <option selected value="1">DNI</option>
                                <option value="2">Nombre</option>
                                <option value="3">Protocolo</option>
                            </select>
                        </div>                
                    </div>

                    <div class="form-group">
                        <input type="text" name="dato" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">
                            Buscar
                        </button>
                    </div>
                </form>                
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 p-4 table-responsive" >
        {{#if pacientes}}
            <table class="table table-striped table-hover table-bordered table-sm bg-white table-responsive" 
            > 
                <thead>
                <tr>
                    <td><div class="sizeFecha">Fecha </div></td>
                    <td>Protocolo</td>
                    <td>DNI</td>
                    <td>Nombre</td>
                    <td>Acciones</td>

                </tr>
                </thead>
                <tbody >
                    {{#each pacientes}}
                    <tr>
                        <td>{{formatFecha Fecha}}</td>
                        <td>{{Protocolo}}</td>
                        <td>{{Paciente.DNI}}</td>
                        <td>{{Paciente.Nombre}}</td>
                        <td>
                            <form action="/protocolo/seek/{{_id}}" method="POST">
                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">
                                        Ver
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <div class="card mx-auto">
                <div class="card-body">
                    <h3 class="px-auto" >SIN PACIENTE</h3>
                </div>
            </div>
        {{/if}}
    </div>
</div>

